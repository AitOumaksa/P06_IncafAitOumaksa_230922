<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="Snowtricks est un site collaboratif dédié à la pratique du snowboard. Vous y trouverez les tricks principaux et les conseils pour les réussir"/>
		<meta name="author" content="Incaf Ait Oumaksa"/>
		<link rel="icon" href="favicon.ico">
		<link rel="icon" href="../public/favicon.ico">
		<title>
			{% block title %}{% endblock %}
		</title>
         <script src="https://kit.fontawesome.com/fc1e988ec8.js" crossorigin="anonymous"></script>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('../assets/style/style.css') }}">
			<link href="{{ asset('../node_modules/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet"/>
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400&family=Roboto:ital,wght@0,400;1,700&display=swap" rel="stylesheet">
		{% endblock %}
	</head>
	<body
		class="">
		<!-- Header -->
		<nav class="navbar navbar-expand-lg bg-light  navbar-light shadow  bg-nav">
			<div class="container">
				<a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset('../assets/logo.png') }}" alt="Logo SnowTricks"></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link fs-5 text-info" aria-current="page" href="{{ path('home') }}">
								<i class="fas fa-home"></i>
								Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link fs-5 text-info" href="#list-Snowboard">
								<i class="fas fa-snowboarding"></i>
								Tricks</a>
						</li>
					</ul>

					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if app.user %}
						<li class="nav-item">
							<a class="nav-link fs-5 text-info" href="{{ path('logout') }}">
								<i class="fas fa-sign-in-alt"></i>
								Deconnexion</a>
						</li>
                    {% else %}    
						<li class="nav-item">
							<a class="nav-link fs-5 text-info" aria-current="page" href="{{ path('register') }}">
								<i class="fas fa-user-plus"></i>
								Inscription</a>
						</li>
						<li class="nav-item">
							<a class="nav-link fs-5 text-info" href="{{ path('login') }}">
								<i class="fas fa-sign-in-alt"></i>
								Connexion</a>
						</li>
                    {% endif %}
					</ul>
				</div>
			</div>
		</nav>

		<!--End Header -->
		{% block main %}{% endblock %}


		<footer id="sticky-footer" class="p-4 g-0 py-4 bg-info text-white-50 fs-3">
			<div class="container text-center text-dark">
				<small>Copyright &copy; SnowTricks</small>
			</div>
		</footer>


		{% block javascripts %}{% endblock %}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
	</body>
</html>
