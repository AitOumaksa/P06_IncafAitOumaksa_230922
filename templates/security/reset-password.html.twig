{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Réinitialisation mot de passe !
{% endblock %}

{% block main %}
	<div
		class="row d-flex justify-content-center">
		<!-- Background image -->
		<div class="bg-image opacity-75">
			<div class="bloc-title-home-page">
				<h1 class="h1 d-flex justify-content-center text-center text-primary">SnowTricks</h1>
				<p class="fs-3 d-flex justify-content-center p-3 text-center">
					Réinitialisation - de mot de passe !
				</p>
			</div>
		</div>
		<div class="row container col -12 col-md-10 col-md-offset-1 mt-5 mb-4 shadow p-3 mb-5 bg-body rounded d-flex flex-wrap">
			<h1 class=" mb-3">Réinitialisation mot de passe:</h1>
			{{ form_start(formPassword , {'attr': {'novalidate': 'novalidate'}}) }}
			<div class="col">
				{{ form_row(formPassword.password) }}
				<button type="submit" class="btn btn-success btn-lg ">Envoyer !</button>
				{{ form_end(formPassword) }}
			</div>
		</div>
	</div>
{% endblock %}
